@model IEnumerable<HOTPIZZA.Models.TuyenDung>
@{
    ViewBag.Title = "Tuyển dụng";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<style>
    h2 {
        font-size: 36px;
        font-weight: bold;
        color: #2c3e50;
        text-align: center;
        margin-top: 20px;
        margin-bottom: 20px;
        font-family: 'Arial', sans-serif;
        text-transform: uppercase;
        border-bottom: 2px solid #e74c3c;
        padding-bottom: 10px;
    }

    .post-area {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        padding: 20px 0;
        background-color: #f9f9f9;
        min-height: 10vh;
        margin: 0 auto;
        width: 100%;
    }

    .single-post {
        display: flex;
        flex-direction: row;
        padding: 10px;
        margin-bottom: 10px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        width: 80%;
        max-width: 1000px;
        align-items: center;
        position: relative;
    }

        .single-post .thumb {
            width: 300px;
            margin-right: 30px;
        }

            .single-post .thumb img {
                width: 100%;
                border-radius: 8px;
            }

        .single-post .details {
            flex: 1;
            position: relative;
        }

        .single-post .title .titles h4 {
            font-size: 1.5em;
            margin: 0;
            color: #f79b1e;
            font-family: 'Times New Roman', Times, serif;
        }

        .single-post .title .titles h5 {
            font-size: 1.2em;
            color: #555;
            margin-top: 10px;
            font-weight: normal;
            font-family: 'Times New Roman', Times, serif;
        }


        .single-post .apply-btn {
            position: absolute;
            bottom: 10px;
            right: 10px;
            border: 2px solid #d9534f;
            padding: 8px 15px;
            color: #d9534f;
            text-decoration: none;
            font-weight: bold;
            border-radius: 8px;
            transition: background-color 0.3s ease, color 0.3s ease;
            font-family: 'Times New Roman', Times, serif;
        }

            .single-post .apply-btn:hover {
                background-color: #d9534f;
                color: white;
            }

        .single-post .details p {
            margin: 10px 0;
            color: #555;
            line-height: 1.6;
        }

        .single-post .details h5 {
            font-size: 1em;
            font-weight: bold;
            color: #333;
            margin-top: 10px;
        }

        .single-post .details .address {
            display: flex;
            align-items: center;
            font-size: 0.9em;
            color: #666;
        }

            .single-post .details .address span {
                margin-right: 8px;
                color: #d9534f;
            }
</style>

<main>
    <div class="column">
        <h2>Tuyển dụng</h2>
        @foreach (var item in Model)
        {
            <!-- Start post Area -->
            <section class="post-area section-gap">
                <div class="single-post">
                    <div class="thumb">
                        <img src="~/images/tuyendung.jpg" alt="Tuyển dụng">
                    </div>
                    <div class="details" style="font-family:'Times New Roman', Times, serif">
                        <div class="title">
                            <div class="titles">
                                <h4>@item.ViTriLamViec</h4>
                                <h5>@item.MoTacCongViec</h5>
                            </div>
                        </div>
                        <h5>Tính chất công việc: Full time</h5>
                        <p class="address"><span class="lnr lnr-map"></span> Yêu cầu: Có kinh nghiệm</p>
                        <p class="address"><span class="lnr lnr-database"></span> Lương Thỏa Thuận</p>
                        <a href="https://docs.google.com/forms/d/1wFABFxtEHXtyAghrod6z9dYxq1KY20ZWIN8-4xGrueQ" target="_blank" class="apply-btn">Apply</a>
                    </div>
                </div>
            </section>
        }
    </div>
</main>
